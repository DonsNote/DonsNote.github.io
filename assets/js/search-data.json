---
{%- assign items = site.html_pages | where: "search_exclude", nil -%}
{
  "docs": [
    {%- for item in items -%}
    {
      "id": {{ forloop.index0 | jsonify }},
      "title": {{ item.title | jsonify }},
      "content": {{ item.content | strip_html | jsonify }},
      "url": {{ item.url | relative_url | jsonify }},
      "relUrl": {{ item.url | relative_url | jsonify }}
    }{%- unless forloop.last %},{%- endunless -%}
    {%- endfor -%}
  ]
}
